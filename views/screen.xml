<theme defaultView="Icons">
  <formatVersion>7</formatVersion>
  <view name="screen">
    <text name="clock">
      <color>777777FF</color>
      <fontSize>0.035</fontSize>
      <pos>0.90 0.94</pos>
      <size>0.09 0.058</size>
      <fontSize verticalScreen="true">0.028</fontSize>
      <pos verticalScreen="true">0.90 0.012</pos>
      <size verticalScreen="true">0.09 0.0275</size>
      <color verticalScreen="true">FFFFFFA0</color>
      <alignment>right</alignment>
      <verticalAlignment>center</verticalAlignment>
    </text>
    <controllerActivity name="controllerActivity">
      <pos>0.01 0.012</pos>
      <size>0.185 0.023</size>
      <itemSpacing>0.003</itemSpacing>
      <color>FFFFFF90</color>
      <!-- controllers -->
      <imagePath>./art/gamepad.svg</imagePath>
      <gunPath>./art/gun.svg</gunPath>
      <wheelPath>./art/wheel.svg</wheelPath>
      <activityColor>A0A0FFC0</activityColor>
      <hotkeyColor>FFA0A0C0</hotkeyColor>
    </controllerActivity>
    <batteryIndicator name="batteryIndicator">
      <pos>0.955 0.012</pos>
      <pos verticalScreen="true">0.9 0.013</pos>      
      <size>0.033 0.0275</size>
      <horizontalAlignment>right</horizontalAlignment>
      <incharge>./art/battery/incharge.svg</incharge>
      <full>./art/battery/full.svg</full>
      <at75>./art/battery/75.svg</at75>
      <at50>./art/battery/50.svg</at50>
      <at25>./art/battery/25.svg</at25>
      <empty>./art/battery/empty.svg</empty>
      <planemodeIcon>./art/icons/Planemode.png</planemodeIcon>
      <color>FFFFFFA0</color>
    </batteryIndicator>
    <batteryIndicator name="batteryIndicator" tinyScreen="true">
      <pos>0.915 0.013</pos>
      <size>0.07 0.07</size>
    </batteryIndicator>
